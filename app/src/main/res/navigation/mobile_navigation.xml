<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ru.geekbrains.filmapp.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

    </fragment>
    <fragment
        android:id="@+id/navigation_category"
        android:name="ru.geekbrains.filmapp.fragments.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/openMovieDetails"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="ru.geekbrains.filmapp.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="ru.geekbrains.filmapp.fragments.MovieDetailsFragment"
        android:label="fragment_movie_details" >
        <argument
            android:name="moveId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/contacts_nav"
        android:name="ru.geekbrains.filmapp.fragments.ContactsFragment"
        android:label="ContactsFragment" />
</navigation>